@using BlingRus.Web.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model ContactRequestModel
@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="well">
    
    <a asp-action="Index">@Localizer["TermsAndConditions"]</a>

    <div style="max-width: 540px;">
        <form class="form-horizontal" method="post">
            <h2>@Localizer["ContactUs"]</h2>

            <div class="form-group">
                <label asp-for="CustomerName" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="CustomerName" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="CustomerEmail" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="CustomerEmail" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="CustomerAddress" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="CustomerAddress" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="CustomerPhone" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="CustomerPhone" class="form-control" tabindex="1"/>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="RequestType" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <select asp-for="RequestType" asp-items="Html.GetEnumSelectList<ContactRequestType>()" class="form-control"></select>
                </div>
            </div>

            <div class="form-group form-group-sm">
                <label asp-for="ContactStart" class="col-sm-4 control-label"></label>
                <div class="col-sm-4">
                    <input asp-for="ContactStart" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <input asp-for="ContactEnd" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="OrderDate" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="OrderDate" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Message" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <textarea asp-for="Message" class="form-control" rows="10"></textarea>
                </div>
            </div>


            @if (ViewData.ModelState.Any(s => s.Value.Errors.Any()))
            {
                <div class="alert alert-danger alert-dismissable">
                    <a class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></a>
                    @foreach (var modelError in ViewData.ModelState.SelectMany(kvp => kvp.Value.Errors))
                    {
                        <p>@modelError.ErrorMessage</p>
                    }
                </div>
            }

            <button type="submit" class="btn btn-default">@Localizer["Send"]</button>
        </form>
    </div>
</div>