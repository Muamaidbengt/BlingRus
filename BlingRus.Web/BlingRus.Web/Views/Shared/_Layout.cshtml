<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-timepicker/css/bootstrap-timepicker.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <div class="navbar-brand" style="height: 125px;">
                    <img src="@Url.Content("~/img/Bling-R-Us-Logo3.bmp")" style="max-height: 100px" />
                </div>

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<a asp-area="" asp-controller="Store" asp-action="Index" class="navbar-brand">Store</a>*@
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav nav-pills">
                    <li><a asp-controller="Store" asp-action="Index">Store</a></li>
                    <li><a asp-controller="About" asp-action="Index">About</a></li>
                    <li><a asp-controller="About" asp-action="Contact">Contact</a></li>
                    <li class="hidden-xs">
                        <div class="input-group">
                            <a asp-controller="Store" asp-action="Checkout" class="btn btn-default navbar-btn"><i class="glyphicon glyphicon-shopping-cart"></i><span class="badge" id="cart-counter">0</span> Checkout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap-timepicker/js/bootstrap-timepicker.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
